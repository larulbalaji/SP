<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE Plugin PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<Plugin displayName="IIQStatsWidget" minSystemVersion="7.1" name="iiqstats" rightRequired="iiqstatsRight" version="1.0">
  <Attributes>
    <Map>
      <entry key="minUpgradableVersion" value="0.1"/>
      <entry key="settings">
        <value>
          <List>
            <Setting dataType="int" defaultValue="25" helpText="" label="Limit" name="limit"/>
            <Setting dataType="boolean" defaultValue="true" helpText="Select to show Identity count" label="Show Identity Count" name="showidentity"/>
            <Setting dataType="boolean" defaultValue="true" helpText="Select to show Entitlement count" label="Show Entitlement Count" name="showentitlements"/>
            <Setting dataType="boolean" defaultValue="true" helpText="Select to show Bundles count" label="Show Bundles Count" name="showbundles"/>
            <Setting dataType="boolean" defaultValue="true" helpText="Select to show Unused Bundles count" label="Show Unused Bundles Count" name="showunusedbundles"/>
            <Setting dataType="boolean" defaultValue="true" helpText="Select to show Certification count" label="Show Certification Count" name="showcertifications"/>
            <Setting dataType="boolean" defaultValue="false" helpText="Select to show Password Reset count" label="Show Password Reset Count" name="showpasswordresets"/>
            <Setting dataType="boolean" defaultValue="false" helpText="Select to show Password Change count" label="Show Password Change Count" name="showpasswordchanges"/>
            <Setting dataType="boolean" defaultValue="false" helpText="Select to show Access Request count" label="Show Access Request Count" name="showaccessrequests"/>
            <Setting dataType="boolean" defaultValue="false" helpText="Select to show Policy Violation count" label="Show Policy Violation Count" name="showpolicyviolations"/>
            <Setting dataType="boolean" defaultValue="false" helpText="Select to show Sensitive User count" label="Show Sensitive User Count" name="showsensitiveusers"/>
            
          </List>
        </value>
      </entry>
        <entry key="snippets">
        <value>
          <List>
            <Snippet regexPattern=".*\/home\.?(jsf|xhtml)" rightRequired="IIQStatsPluginRight">
              <Scripts>
                <String>ui/js/AbstractListCtrl.js</String>
                <String>ui/js/IIQStatsCtrl.js</String>
                <String>ui/js/IIQStatsDirective.js</String> 
                <String>ui/js/IIQStatsService.js</String>
                <String>ui/js/IIQStats.js</String>
              </Scripts>
                  <StyleSheets>
                <String>ui/css/seri-widget.css</String>
              </StyleSheets>
            </Snippet>
          </List>
        </value>
      </entry>
      <entry key="restResources">
        <value>
          <List>
            <String>sailpoint.plugin.iiqstats.rest.IIQStatsResource</String>
          </List>
        </value>
      </entry>
    </Map>
  </Attributes>
</Plugin>
