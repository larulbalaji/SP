<sailpoint>
<EmailTemplate   name="Delegation">
  <Body>    
  <![CDATA[

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>

  <title>New Delegation Request: $!{workItemName}</title>
    
</head>

<body style="background:#00799d;margin:0;padding:0;text-align:left;">

  <table cellpadding="0" cellspacing="0" width="588" border="0" align="center" style="margin:0 auto;padding:0;">
    <tr valign="top">
      <td> <img src="%%seriIIQlink%%/images/TopLogo1.png" height="" vspace="10">&nbsp;</td>
    </tr>
    <tr valign="top">
      
    </tr>
    <tr valign="top">
        <td>
        <!-- EMAILER CONTENT BEGINS -->
        
        <!-- HEADER -->
        <!-- CHANGE BACKGROUND COLOR IN STYLE BELOW: blue - #0987a0 ; tan - #847f5c -->
        <table cellpadding="0" cellspacing="0" width="588" style="background:#fafafa;margin:0;padding:0;text-align:left;border-bottom:5px solid #b2b2b2;">
        <tr valign="middle">
          <td height="85">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
            <td>
            <!-- CHANGE COLOR STYLE BELOW: blue - #98bec6 ; tan - #b5b192 -->
            <h2 style="color:#222222;margin:0;padding:0;font:bold 12pt Arial;text-transform:uppercase;">New Delegation</h2>
            <h1 style="color:#037da1;margin:0;padding:0;font:bold 22pt Arial;">Delegated Access Review Decision</h1>             
            </td>
        </tr>
        </table>
        <!-- /HEADER -->
        
        <!-- CONTENT -->
     <table cellpadding="0" cellspacing="0" width="588" style="background:#dadada;margin:0;padding:0;text-align:left;border-left:0px solid #b2b2b2;border-right:0px solid #b2b2b2;">
        <tr valign="top"> 
          <td colspan="3"><img src="%%seriIIQlink%%/images/LogoHeader.png" height=""hspace="10" vspace="10" /></td>
        </tr>
        <tr valign="top">
          <td width="40">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td>

            
            <table cellpadding="0" cellspacing="0" width="100%" border="0">
            <tr valign="bottom">
            <td>
            <p style="margin:0;padding:0;color:#007080;font:bold 10pt Arial;line-height:15pt;"></p>
            <p/>
            <p style="margin:0;padding:0;color:#007080;font: 10pt Arial;line-height:15pt;">$!{requesterName} has delegated the following work item to you: </p>
            <br/>
            <p style="margin:0;padding:0;color:#007080;font: bold 10pt Arial;line-height:15pt;">$!{workItemName}</p>
            </td>
            </tr>
            </table>
            <!-- CHANGE STYLE COLOR IN anchor or a TAG BELOW and in all anchor tags that apply below : red - #a22831 ; blue - #0987a0 -->
            <p style="margin:20px 0;padding:0;color:#007080;font:bold 10pt Arial;line-height:15pt;"><a href="%%seriIIQlink%%/dashboard.jsf" style="color:#0000ee;">Click here to get started on this task.</a></p>
            <p style="margin:0 0 20px;padding:0;color:#007080;font:normal 10pt Arial;line-height:15pt;">Comments from $!{requesterName}:</p>
            <p style="margin:0 0 20px;padding:0;color:#007080;font:normal 10pt Arial;line-height:15pt;">$!{comments}</p>
            <p style="margin:0;padding:0;color:#007080;font:normal %%thankYouStatementFontSize%% Arial;line-height:15pt;">Thank you for your cooperation</p>
            <p style="margin:0 0 50px;padding:0;color:#007080;font:bold %%thankYouStatementFontSize%% Arial;line-height:15pt;">Your Security and Compliance Team</p>
            </td>
        </tr>
        <tr valign="top">
          <td colspan="3">
              <p style="margin:0 0 0 30px;padding:0;color:%%supportLinksSeparator%%;font:normal 12pt Arial;line-height:12pt;margin-bottom:30px"><a href="%%seriIIQlink%%/dashboard.jsf" style="color:#666666;text-decoration:none;font-weight:bold;">Help</a> &nbsp;|&nbsp; <a href="%%seriIIQlink%%/dashboard.jsf" style="color:#666666;text-decoration:none;font-weight:bold;">FAQs</a> &nbsp;|&nbsp; <a href="%%seriIIQlink%%/dashboard.jsf" style="color:#666666;text-decoration:none;font-weight:bold;">Support</a></p>
         </tr>
        </table>
        <!-- /CONTENT -->
        
       <!-- FOOTER -->
        <!-- CHANGE BACKGROUND COLOR IN STYLE BELOW: blue - #0987a0 ; tan - #847f5c -->
        <table cellpading="0" cellspacing="0" width="588" style="background:#fafafa;margin:0;padding:0;text-align:right;border-top:0px solid #b2b2b2;">
        <tr valign="middle">
          <td width="180" height="60">&nbsp;&nbsp;</td>
        </tr>
        </table>
        <!-- /FOOTER -->
        
        <!-- /EMAILER -->
        </td>
    </tr>
    </table>
	</body>
	</html>
  ]]>

    
    </Body>
  <Description>
      Email Template for notifying work item owners of new delegations.
      
      Arguments
      ---------
      workItemName (String):        The name of the delegated WorkItem
      certification (Certification):    The Certification object containing the delegated item
      comments (String):        Comments from the delegator
    requesterName (String):       The display name of the Identity that requested the reassignment

    </Description>
  <Subject>New delegation request: $!{workItemName}</Subject>
</EmailTemplate>
</sailpoint>
