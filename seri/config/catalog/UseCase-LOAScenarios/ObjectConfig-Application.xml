<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE sailpoint PUBLIC "sailpoint.dtd" "sailpoint.dtd">

<sailpoint>

  <ImportAction name="merge">
	<ObjectConfig name="Application">
	  <ObjectAttribute categoryName="Account LOA Settings" displayName="Account LOA Policy" editMode="Permanent" name="accountLOAScenario" required="true">
	    <AllowedValues>
	      <String>Disable Account Immediately</String>
	      <String>Do Nothing</String>
	    </AllowedValues>
	    <Description>Method by which accounts on this applications are Disabled.
	Disable Account Immediately = Disable the account Immediately</Description>
	  </ObjectAttribute>
	  <ObjectAttribute categoryName="Account LOA Settings" displayName="Leave Of Absence Rule" editMode="Permanent" name="loaRule" type="sailpoint.object.Rule"/>
	  <ObjectAttribute categoryName="Return from LOA" defaultValue="Enable Account " displayName="Return from LOA Scenario" editMode="Permanent" name="accounReturnLOAScenario">
	    <AllowedValues>
	      <String>Enable Account</String>
	      <String>Do Nothing</String>
	    </AllowedValues>
	  </ObjectAttribute>
	  <ObjectAttribute categoryName="Return from LOA" displayName="Return from LOA Rule" editMode="Permanent" name="returnLOARule" type="sailpoint.object.Rule"/>
	</ObjectConfig>
  </ImportAction>
</sailpoint>