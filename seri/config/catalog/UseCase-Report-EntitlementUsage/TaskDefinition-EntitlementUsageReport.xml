<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE TaskDefinition PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<TaskDefinition executor="sailpoint.reporting.LiveReportExecutor" name="Entitlement Usage Report" progressMode="Percentage" resultAction="Rename" subType="Access Review and Certification Reports" template="true" type="LiveReport">
  <Attributes>
    <Map>
      <entry key="report">
        <value>
          <LiveReport title="Entitlement Usage Report">
            <DataSource dataSourceClass="sailpoint.seri.reporting.datasource.EntitlementUsageDataSource" objectType="Bundle" type="Java">
              <QueryParameters>
                <Parameter argument="entitlements" property="entitlements" valueClass="sailpoint.object.ManagedAttribute"/>
              </QueryParameters>
            </DataSource>
            <ReportForm>
              <Reference class="sailpoint.object.Form" name="Entitlement Usage Report Form"/>
            </ReportForm>
            <Columns>
              <ReportColumnConfig field="entitlement" header="rept_data_owner_col_description" property="exceptionEntitlements" width="110"/>
              <ReportColumnConfig field="bundles" header="Roles" property="name" width="110"/>
            </Columns>
          </LiveReport>
        </value>
      </entry>
    </Map>
  </Attributes>
  <Description>Displays information about the entitlement usage by roles</Description>
  <RequiredRights>
    <Reference class="sailpoint.object.SPRight" name="FullAccessEntitlementOwnerAccessReviewReport"/>
  </RequiredRights>
  <Signature>
    <Inputs>
      <Argument multi="true" name="entitlements" type="ManagedAttribute"/>
      <Argument multi="true" name="app" type="Application"/>
    </Inputs>
  </Signature>
</TaskDefinition>
