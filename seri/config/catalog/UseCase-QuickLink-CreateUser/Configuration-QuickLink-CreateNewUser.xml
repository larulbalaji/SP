<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE sailpoint PUBLIC "sailpoint.dtd" "sailpoint.dtd">

<sailpoint>
  <ImportAction name="merge">
    <Configuration name="SystemConfiguration">
      <Attributes>
        <Map>
          <entry key='managerQuickLinks'>
            <value>
      	      <List>
        	      <QuickLink action="workflow" category="Manage"
                 icon="viewIdentity" messageKey="Onboard Workforce" name="Onboard Workforce" ordering="10">
                  <Attributes>
                    <Map>
                      <entry key="forceAllowSelf"> 
                        <value>
                          <Boolean>true</Boolean>
                        </value>
                      </entry>
                      <entry key="hideAllowOthers">
                        <value>
                          <Boolean>true</Boolean>
                        </value>
                      </entry>
                      <entry key="launcher">
                        <value>
                          <Script>
                            <Source>return currentUser.getName()</Source>
                          </Script>
                        </value>
                      </entry>
                      <entry key="requester">
                        <value>
                          <Script>
                            <Source>return currentUser.getName()</Source>
                          </Script>
                        </value>
                      </entry>
                      <entry key="workflowName" value="Workflow-QuickLink-CreateUser"/>
                    </Map>
                  </Attributes>
                </QuickLink>
              </List>
            </value>
          </entry>
        </Map>
      </Attributes>
    </Configuration>
  </ImportAction>
</sailpoint>