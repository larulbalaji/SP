<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE sailpoint PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<sailpoint>
<EmailTemplate    name="LCM User Notification_de">
  <Body>
  <![CDATA[
   
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title>Änderungen an Ihrer Identität verarbeitet wurden</title>  
</head>

<!-- Background for  -->
<body style="background:#00799d;margin:0;padding:0;text-align:left;">

  <table cellpadding="0" cellspacing="0" width="588" border="0" align="center" style="margin:0 auto;padding:0;">
    <tr valign="top">
      <td> <img src="%%seriIIQlink%%/images/TopLogo1.png" height="" vspace="10">&nbsp;</td>
    </tr>
    <tr valign="top">      
    </tr>
    <tr valign="top">
      <td>
        <!-- EMAILER CONTENT BEGINS -->
        
        <!-- HEADER -->
        <!-- CHANGE BACKGROUND COLOR IN STYLE BELOW: blue - #0987a0 ; tan - #847f5c -->
        <table cellpadding="0" cellspacing="0" width="588" style="background:#fafafa;margin:0;padding:0;text-align:left;border-bottom:5px solid #b2b2b2;">
          <tr valign="middle">
            <td height="85">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
            <td>
              <!-- CHANGE COLOR STYLE BELOW: blue - #98bec6 ; tan - #b5b192 -->
              <h2 style="color:#222222;margin:0;padding:0;font:bold 12pt Arial;text-transform:uppercase;">Kontoänderungen verarbeitet</h2>
              <h1 style="color:#037da1;margin:0;padding:0;font:bold 22pt Arial;">'$identityDisplayName'</h1>             
            </td>
          </tr>
        </table>

        <!-- /HEADER -->
        
        <!-- CONTENT -->
        <table cellpadding="0" cellspacing="0" width="588" style="background:#dadada;margin:0;padding:0;text-align:left;border-left:0px solid #b2b2b2;border-right:0px solid #b2b2b2;">
          <tr valign="top"> 
            <td colspan="3"><img src="%%seriIIQlink%%/images/LogoHeader.png" height=""hspace="10" vspace="10" /></td>
          </tr>
          <tr valign="top">
            <td width="40">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
            <td>
              <table cellpadding="0" cellspacing="0" width="100%" border="0">
                <tr valign="top">
                  <td>
                    #if ( $approvalSet.hasApproved() ) 
                      <p style="margin:0 0 20px;padding:0;color:#007080;font:normal 10pt Arial;line-height:15pt;">Dies ist eine automatisierte Mitteilung von IdentityIQ.</p>
                      <p style="margin:0;padding:0;color:#007080;font:normal 10pt Arial;line-height:15pt;">$launcher angefordert folgende Kontoänderungen für '$identityDisplayName' und sie waren <strong>Genehmigt</strong>.</p>                                       
                      <p style="margin:20px 0;padding:0;color:#007080;font:bold 10pt Arial;line-height:15pt;">Bitte beachten Sie, dass einige Zugriffsrechte kann bis zu 48 Stunden vor der Einnahme wirksam werden.</p>
                      <p style="margin:0;padding:0;color:#007080;font:normal 10pt Arial;line-height:15pt;">Danke für Ihre Kooperation,</p>
                      <p style="margin:0 0 20px;padding:0;color:#007080;font:bold 10pt Arial;line-height:15pt;">User Administration Team</p>
                    #end
                    #if ( $approvalSet.hasRejected() ) 
                      <p style="margin:0 0 20px;padding:0;color:#007080;font:normal 10pt Arial;line-height:15pt;">Dies ist eine automatisierte Mitteilung von IdentityIQ.</p>
                      <p style="margin:0;padding:0;color:#007080;font:normal 10pt Arial;line-height:15pt;">$launcher angefordert folgende Kontoänderungen für '$identityDisplayName' und sie waren <strong>nicht zugelassen</strong>.</p>                                       
                      <p style="margin:20px 0;padding:0;color:#007080;font:bold 10pt Arial;line-height:15pt;">Should you feel you received this msg in error, please notify the requestor and resubmit. </p>
                      <p style="margin:0;padding:0;color:#007080;font:normal 10pt Arial;line-height:15pt;">Danke für Ihre Kooperation,</p>
                      <p style="margin:0 0 20px;padding:0;color:#007080;font:bold 10pt Arial;line-height:15pt;">User Administration Team</p>
                    #end
                  </td>
    							<td width="220" align="right">
                    <table cellpadding="0" cellspacing="0" width="192" border="0" style="margin-bottom:30px">
        							<tr>
          							<td>
                          <table cellspacing="0" cellpadding="2" border="0">
                            #if ( $approvalSet )
                              #if ( $approvalSet.hasApproved() ) 
                                #foreach ($item in $approvalSet.approved)
                                  #if ( $item.owner && $item.owner != $launcher ) 
                                    <tr valign="top">
                                      <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                        <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Genehmigt durch: </strong>$item.owner</p>
                                      </td>
                                    </tr>
                                  #end
                                  #if ( $item.comments)
                                    #foreach ($comment in $item.comments)
                                      <tr valign="top">
                                        <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                          <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Completion Kommentare: </strong>$comment</p>
                                        </td>
                                      </tr>
                                    #end
                                  #end
                                  <tr valign="top">
                                    <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                      <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Applikation: </strong>$item.application</p>
                                    </td>
                                  </tr>
                                  <tr valign="top">
                                    <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                      <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Account: </strong>$item.nativeIdentity</p>
                                    </td>
                                  </tr>
                                  #if ( $item.instance ) 
                                    <tr valign="top">
                                      <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                        <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Approved By<: </strong>$item.owner</p>
                                      </td>
                                    </tr>
                                    <tr valign="top">
                                      <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                        <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Instanz: </strong>$item.instance</p>
                                      </td>
                                    </tr>
                                  #end
                                  <tr valign="top">
                                    <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                      <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Operation: </strong>$item.operation</p>
                                    </td>
                                  </tr>                   
                                  #if ( $item.name ) 
                                    <tr valign="top">
                                      <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                        <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Attribute: </strong>$item.name</p>
                                      </td>
                                    </tr> 
                                  #end
                                  #if ( $item.csv ) 
                                    <tr valign="top">
                                      <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                        <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Wert(e): </strong>$item.csv</p>
                                      </td>
                                    </tr> 
                                  #end
                                  #if ( $item.requesterComments )
                                    <tr valign="top">
                                       <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                         <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Anforderer Kommentare: </strong>$item.requesterComments</p>
                                       </td>
                                    </tr> 
                                  #end
                                #end
                              #end
                              #if ( $approvalSet.hasRejected() ) 
                                #foreach ($item in $approvalSet.rejected)
                                  <tr valign="top">
                                    <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                      <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Rejected By: </strong>$item.owner</p>
                                    </td>
                                  </tr> 
                                  #if ( $item.comments)
                                    #foreach ($comment in $item.comments)
                                      <tr valign="top">
                                        <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                          <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Completion Kommentare: </strong>$comment</p>
                                        </td>
                                      </tr> 
                                    #end
                                  #end
                                  <tr valign="top">
                                    <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                      <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Application: </strong>$item.application</p>
                                    </td>
                                  </tr> 
                                  <tr valign="top">
                                    <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                      <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Account: </strong>$item.nativeIdentity</p>
                                    </td>
                                  </tr> 
                                  #if ( $item.instance ) 
                                    <tr valign="top">
                                      <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                        <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Instanz: </strong>$item.instance</p>
                                      </td>
                                    </tr> 
                                  #end
                                  <tr valign="top">
                                    <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                      <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Operation: </strong>$item.operation</p>
                                    </td>
                                  </tr> 
                                  #if ( $item.name ) 
                                    <tr valign="top">
                                      <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                        <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Attribute: </strong>$item.name</p>
                                      </td>
                                    </tr> 
                                  #end
                                  #if ( $item.csv )    
                                    <tr valign="top">
                                      <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                        <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Wert(e): </strong>$item.csv</p>
                                      </td>
                                    </tr> 
                                  #end
                                  #if ( $item.requesterComments )
                                    <tr valign="top">
                                      <td style="background:#fafafa;border-bottom:2px solid #FFF;">
                                        <p style="color:#007080;font:normal 8pt Arial;margin:10px 0 0 15px;padding:0;line-height:13pt;"><strong>Anforderer Kommentare: </strong>$item.requesterComments</p>
                                      </td>
                                    </tr> 
                                  #end
                                #end
                              #end
                            #end
                          </table>
									     	</td>
									    </tr>
                    </table>
					     		</td>
                </tr>
              </table>

              <!-- CHANGE STYLE COLOR IN anchor or a TAG BELOW and in all anchor tags that apply below : red - #a22831 ; blue - #0987a0 -->
              <p style="margin:0;padding:0;color:#007080;font:normal %%thankYouStatementFontSize%% Arial;line-height:15pt;">Danke für Ihre Kooperation</p>
              <p style="margin:0 0 50px;padding:0;color:#007080;font:bold %%thankYouStatementFontSize%% Arial;line-height:15pt;">Your Security and Compliance Team</p>
            </td>
            <td width="40">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
          </tr>
          <tr valign="top">
            <td colspan="3">
              <p style="margin:0 0 0 30px;padding:0;color:%%supportLinksSeparator%%;font:normal 12pt Arial;line-height:12pt;margin-bottom:30px"><a href="%%seriIIQlink%%/dashboard.jsf" style="color:#666666;text-decoration:none;font-weight:bold;">Help</a> &nbsp;|&nbsp; <a href="%%seriIIQlink%%/dashboard.jsf" style="color:#666666;text-decoration:none;font-weight:bold;">FAQs</a> &nbsp;|&nbsp; <a href="%%seriIIQlink%%/dashboard.jsf" style="color:#666666;text-decoration:none;font-weight:bold;">Support</a></p>
            </td>
          </tr>
        </table>
        <!-- /CONTENT -->
          
        <!-- FOOTER -->
        <!-- CHANGE BACKGROUND COLOR IN STYLE BELOW: blue - #0987a0 ; tan - #847f5c -->
        <table cellpading="0" cellspacing="0" width="588" style="background:#fafafa;margin:0;padding:0;text-align:right;border-top:0px solid #b2b2b2;">
          <tr valign="middle">
            <td width="180" height="60">&nbsp;&nbsp;</td>
          </tr>
        </table>
        <!-- /FOOTER -->
        <!-- /EMAILER -->
      </td>
    </tr>
  </table>
</body>
</html>
  ]]>
</Body>
  <Description>
      Email Template for notifying users when accounts have been changed through Life Cycle Manager.
      Note that in addition to the declared arguments, all workflow variables,
      Step arguments, and Approval arguments defined in the Workflow are
      also available.
    </Description>
  <Signature>
    <Inputs>
      <Argument name="workflow" type="Workflow">
        <Description>The Workflow object being executed.</Description>
      </Argument>
      <Argument name="approvalSet" type="ApprovalSet">
        <Description>The ApprovalSet object contained in the workflow.</Description>
      </Argument>
      <Argument name="launcher" type="string">
        <Description>The name of the Identity that launched the workflow.</Description>
      </Argument>
      <Argument name="identityDisplayName" type="string">
        <Description>The display name of the Identity that is being changed.</Description>
      </Argument>
    </Inputs>
  </Signature>
  <Subject>Änderungen an Ihrer Identität verarbeitet wurden</Subject>
</EmailTemplate>
</sailpoint>
