<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE TaskDefinition PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<TaskDefinition executor="sailpoint.reporting.LiveReportExecutor" name="Role SunRise Sunset Report" progressMode="Percentage" resultAction="Rename" subType="Access Review and Certification Reports" template="true" type="LiveReport">
  <Attributes>
    <Map>
      <entry key="report">
        <value>
       <LiveReport title="Role SunRise Sunset Report">
            <DataSource dataSourceClass="sailpoint.seri.reporting.datasource.RoleSunriseSunsetDataSource" type="Java">
              <QueryParameters>
                <Parameter argument="argIdentities" property="identities" />
              </QueryParameters>
            </DataSource>
            <ReportForm>
              <Reference class="sailpoint.object.Form" name="Role SunRise SunSet Report Form"/>
            </ReportForm>
            <Columns>
              <ReportColumnConfig field="identity" header="Identity name"  width="50"/>
              <ReportColumnConfig field="roleName" header="Role Name" width="60"/>
              <ReportColumnConfig field="sunriseDate" header="Sunrise Date" width="50"/>
              <ReportColumnConfig field="sunsetDate" header="Sunset Date"  width="50"/>
             </Columns>
          </LiveReport>
        </value>
      </entry>
    </Map>
  </Attributes>
  <Description>Displays information about Future SunRise and SunSet dates for Role Assignments.   The Report can be filtered by individual</Description>
  <RequiredRights>
    <Reference class="sailpoint.object.SPRight" name="FullAccessReport"/>
  </RequiredRights>
  <Signature>
    <Inputs>
      <Argument multi="true" name="identities" type="Identity"/>
      <Argument name="sunrise" type="Date"/>
      <Argument name="sunset" type="Date"/>
    </Inputs>
  </Signature>
</TaskDefinition>
