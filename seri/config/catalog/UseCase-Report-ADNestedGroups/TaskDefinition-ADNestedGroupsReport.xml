<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE TaskDefinition PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<TaskDefinition executor="sailpoint.reporting.LiveReportExecutor" name="AD Nested Groups Report" progressMode="Percentage" resultAction="Rename" subType="Identity and User Reports" template="true" type="LiveReport">
  <Attributes>
    <Map>
      <entry key="report">
        <value>
          <LiveReport title="AD Nested Groups Report">
            <DataSource dataSourceClass="sailpoint.seri.reporting.datasource.ADNestedGroupsDataSource" type="Java">
              <QueryParameters>
                <Parameter argument="argEntitlements" property="entitlements" />
                <Parameter argument="argIdentities" property="identities" />
              </QueryParameters>
            </DataSource>
            <ReportForm>
              <Reference class="sailpoint.object.Form" name="AD Nested Groups Report Form"/>
            </ReportForm>
            <Columns>
              <ReportColumnConfig field="identity" header="Identity name"  width="50"/>
              <ReportColumnConfig field="application" header="Application" width="50"/>
              <ReportColumnConfig field="account" header="Account" width="110"/>
              <ReportColumnConfig field="group" header="Group"  width="150"/>
              <ReportColumnConfig field="direct" header="direct" width="20"/>
              <ReportColumnConfig field="viagroup" header="Via group" width="150"/>
            </Columns>
          </LiveReport>
        </value>
      </entry>
    </Map>
  </Attributes>
  <Description>Displays information about users who are directly or indirectly members of AD groups</Description>
  <Signature>
    <Inputs>
      <Argument multi="true" name="entitlements" type="ManagedAttribute"/>
      <Argument multi="true" name="identities" type="Identity"/>
    </Inputs>
  </Signature>
</TaskDefinition>
