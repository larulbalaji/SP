<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE TaskDefinition PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<TaskDefinition name="Refresh Monitored Users Risk Scores" resultAction="Delete" type="Identity">
  <Attributes>
    <Map>
      <entry key="checkPolicies" value="true"/>
      <entry key="correlateEntitlements" value="true"/>
      <entry key="filterGroups" value="Monitored Users"/>
      <entry key="keepInactiveViolations" value="true"/>
      <entry key="refreshGroups" value="true"/>
      <entry key="refreshScorecard" value="true"/>
    </Map>
  </Attributes>
  <Description>Task to refresh high risk population users</Description>
  <Owner>
    <Reference class="sailpoint.object.Identity"  name="spadmin"/>
  </Owner>
  <Parent>
    <Reference class="sailpoint.object.TaskDefinition"  name="Identity Refresh"/>
  </Parent>
</TaskDefinition>
